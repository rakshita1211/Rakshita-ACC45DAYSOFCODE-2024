a = int(input("Enter tastiness of A: "))
b = int(input("Enter tastiness of B: "))
c = int(input("Enter tastiness of C: "))
d = int(input("Enter tastiness of D: "))


tastiness_1 = a + c  
tastiness_2 = a + d  
tastiness_3 = b + c  
tastiness_4 = b + d  


max_tastiness = max(tastiness_1, tastiness_2, tastiness_3, tastiness_4)


print(f"The maximum possible tastiness is: {max_tastiness}")
