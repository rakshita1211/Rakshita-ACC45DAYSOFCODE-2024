B1 = int(input("Enter the state of bottle 1 (1 for full, 0 for empty): "))
B2 = int(input("Enter the state of bottle 2 (1 for full, 0 for empty): "))
B3 = int(input("Enter the state of bottle 3 (1 for full, 0 for empty): "))


empty_bottles = (B1 == 0) + (B2 == 0) + (B3 == 0)


if empty_bottles >= 2:
    print("Water filling time")
else:
    print("Not now")
